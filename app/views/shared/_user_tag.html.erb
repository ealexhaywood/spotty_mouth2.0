<li>
  <%= link_to (image_tag user.image_url.to_s, :class => 'avatar'), user_path(user) %>
  <%= link_to clean_name(user.username), user_path(user) %>
  <% if signed_in? %>
    <% if current_user.admin? %>
    |  <%= link_to "delete", user, :method => :delete, :confirm => "You sure?",
				    :title => "Delete #{user.username}" %>
    <% end %>
  <% end %>
</li>
