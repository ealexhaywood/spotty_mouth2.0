<div class="user_info">
  <a href="<%= user_path(user) %>">
    <%= image_tag user.image_url.to_s, :class => 'avatar' %>
  </a>
    <span class="user_name">
      <h3><%= link_to clean_name(user.username), user_path(user) %></h3>
    </span>
    <div class="userlinks">
      <%= render :partial => 'shared/user_number_links', :locals => { :user => user } %>
    </div>
</div>
<hr />