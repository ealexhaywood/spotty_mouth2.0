<p>Please enter your email address below.  A new password will be sent to you.</p>
<%= form_tag({ :controller => "passwords", :action => "create"}, :method => "post") %>
<fieldset>
  <div class="field">
    <%= label_tag(:email)  %> <br />
    <%= text_field_tag(:email)  %>
  </div>
  <%= recaptcha_tags %>
  <div class="actions">
      <%= submit_tag "Submit" %>
  </div>
</fieldset>